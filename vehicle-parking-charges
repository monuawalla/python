def bike_charges(x):
    return(x * 10)
def car_charges(y):
    return(y * 20)

vehicle = input("Mention your vehicle type (car/bike): ")
if vehicle == 'bike':
    bike_hrs = int(input("Enter no. of hours of bike parking: "))
    print("You have to pay INR", bike_charges(bike_hrs))
elif vehicle == 'car':
    car_hrs = int(input("Enter no. of hours of car parking: "))
    print("You have to pay INR", car_charges(car_hrs))
else:
    print("Sorry! Only car and bike parking is allowed.")
        
